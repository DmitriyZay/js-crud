								{{!-- <input type="number" name="id" class="products__input">
							</button>
						</form>
					</div> --}}
				</div>

				<div class="products__list">
					{{>product-card}}

					{{!-- {{#each list}}
					<div class="products__item">
						<div class="products__name">
							{{name}}
						</div>
						<div class="products__description">
							{{description}}
						</div>
						<div class="products__id">
							id: {{id}}
						</div>

						<div class="item__line">
							<div class="products__price">
								{{price}}$
							</div>
							<div>
								<a href="/product-edit?id={{id}}" class="products__edit link">Редагувати</a>
							</div>

						</div>

					</div>


					{{/each}} --}}

					{{/if}}
					{{/with}}

				</div>
			</div>
		</section>
	</div>


